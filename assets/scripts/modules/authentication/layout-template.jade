.col-md-6.col-sm-8.col-lg-4.col-xs-12.col-md-offset-3.col-sm-offset-2.col-lg-offset-4.login-wrap
  .login-form
    .error
    form
      .form-group
        label(for='username') Username
        input#username.form-control(type='text', placeholder='Enter username', name='username')
      .form-group
        label(for='password') Password
        input#password.form-control(type='password', placeholder='Password', name='password')
      .text-right
        button.btn.btn-default(type='submit') Submit
